          ]
        },
        "phone": {
          "selector": "label:Phone",
          "type": "tel",
          "required": true,
          "semantic": [
            "phone",
            "mobile",
            "contact",
            "number",
            "phone number",
            "office phone",
            "business contact"
          ]
        },
        "status": {
          "selector": "label:Status",
          "type": "select",
          "required": false,
          "semantic": [
            "status",
            "account status",
            "buyer state"
          ],
          "options": [
            "Active",
            "Inactive"
          ]
        },
        "address": {
          "selector": "label:Address",
          "type": "textarea",
          "required": true,
          "semantic": [
            "address",
            "location",
